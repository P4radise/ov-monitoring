{
    "definitions": {
        "sqsAttributeValue" : {
            "type" : "object",
            "properties" : {
                "sqsAttribute" : {
                    "type" : "string"
                },
                "valueRegexp" : {
                    "type" : "string"
                },
                "dateTimeFormat" : {
                    "type" : "string"
                }
            },
            "required" : [
                "sqsAttribute"
            ]
        },
        "messageTrackor" : {
            "type" : "object",
            "properties" : {
                "messageFilter" : {
                    "allOf": [
                        { "$ref": "#/definitions/sqsAttributeValue" },
                        {
                            "properties" : {
                                "filterRegexp" : {"type" : "string" }
                            },
                            "required" : [
                                "filterRegexp"
                            ]
                        }
                    ]
                },
                "trackorType" : { 
                    "type" : "string",
                    "minLength" : 1
                },
                "fieldMappings" : { 
                    "type" : "array",
                    "items" : {
                        "allOf": [
                            { "$ref": "#/definitions/sqsAttributeValue" },
                            { 
                                "properties" : {
                                    "ovField" : {"type" : "string" }
                                },
                                "required" : [
                                    "ovField"
                                ]
                            }
                        ]
                    },
                    "minItems": 1
                }
            },
            "required" : [
                "trackorType",
                "fieldMappings"
            ]
        }
    },

    "type" : "object",
    "properties" : {
        "ovUrl" : {
            "type" : "string",
            "pattern" : "^https://.*"
        },
        "ovAccessKey" : {
            "type" : "string",
            "minLength" : 20,
            "maxLength" : 20
        },
        "ovSecretKey" : {
            "type" : "string",
            "minLength" : 70,
            "maxLength" : 70
        },
        "ovIntegrationName" : {
            "type" : "string",
            "minLength" : 1
        },
        "createTrackors" : {
            "type" : "array",
            "items" : {
                "$ref": "#/definitions/messageTrackor"
            },
            "minItems": 1
        },
        "updateTrackors" : {
            "type" : "array",
            "items" : {
                "allOf": [
                    { "$ref": "#/definitions/messageTrackor" },
                    { 
                        "properties" : {
                            "trackorFilter" : { 
                                "type" : "object",
                                "properties" : {
                                    "searchConditions" : { "type" : "string"},
                                    "searchConditionsParams" : {
                                        "type" : "array",
                                        "items" : {
                                            "allOf" : [
                                                {"$ref": "#/definitions/sqsAttributeValue"},
                                                {
                                                    "properties" : {
                                                        "paramName" : {
                                                            "type" : "string"
                                                        }
                                                    },
                                                    "required" : ["paramName"]
                                                }
                                            ]
                                            
                                        }
                                    }
                                },
                                "required" : ["searchConditions"]
                            }
                        },
                        "required" : ["trackorFilter"]
                    }
                ]
            },
            "minItems": 1
        },

        "awsAccessKeyId" : {
            "type" : "string",
            "minLength" : 16,
            "maxLength": 128
        },
        "awsSecretAccessKey" : {
            "type" : "string",
            "minLength" : 1
        },
        "awsRegion" : {
            "type" : "string",
            "minLength" : 1
        },
        "queueUrl" : {
            "type" : "string",
            "pattern" : "^https://.*"
        },

        "waitTimeSeconds" : {
            "type" : "integer",
            "minimum" : 0,
            "maximum" : 20,
            "multipleOf" : 1
        }
    },
    "required": [
        "ovUrl",
        "ovAccessKey",
        "ovSecretKey",
        "ovIntegrationName",
        "awsSecretAccessKey",
        "awsRegion",
        "queueUrl"
    ]
}